# Database Configuration
DATABASE_URL=postgresql://insight:your_password_here@postgres:5432/insight

# API Configuration
SECRET_KEY=change-this-to-a-random-secret-key-min-32-chars
API_VERSION=v1
DEBUG=false
LOG_LEVEL=info

# CORS - For development, use *, for production list specific origins
CORS_ORIGINS=*

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=/app/uploads

# Tailscale (for Docker deployment)
TAILSCALE_AUTH_KEY=tskey-auth-your-key-here

# Database Credentials (used by docker-compose)
DB_PASSWORD=your_secure_password_here

# Optional: External Services
# WEATHER_API_KEY=your_openweather_key
